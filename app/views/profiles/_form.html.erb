<%= form_for(@profile) do |f| %>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label 'Roles' %><br />
      <% Role.all.each do |r| %>
          <%= check_box_tag 'role[role_ids][]', r.id,
                            @profile.role_ids.include?(r.id), :id => dom_id(r) %>
          <%= label_tag dom_id(r), r.name, :class => 'check_box_label' %>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit 'Add' %>
    </div>
<% end %>