<h1><%= @user.username %></h1>

<div id="show_form">
  <b><%= t("users.email") %>:</b>
  <%= @user.email %>
  <br />
  <b><%= t('users.registered_on') %>:</b>
  <%= @user.created_at.strftime("%m/%d/%Y %I:%M:%S %p") %>
  <br />
  <br />
  <b><%= t("users.roles") %>:</b>
  <%= roles_to_html @user.roles %>
</div>
<br />
<br />

<% if user_signed_in? %>
    <%= link_to 'Edit', edit_admin_user_path(@user) %>
    <% if @user.id != current_user.id %>
        <%= link_to "Delete", admin_user_path(@user), :method => "delete", :confirm => t("general.are_you_sure"), :class => 'btn' %>
    <% end %>
<% end %>
<%= link_to 'Back', admin_users_path %>
