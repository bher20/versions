<%= form_for([@application, @application.versions.new], :remote => true,
             :html => {:style => 'display: none;'}) do |f| %>
    <div class="field">
      <%= f.label :number %><br />
      <%= f.text_field :number %>
    </div>
    <div class="field">
      <%= f.label :change_log %><br />
      <%= f.text_area :change_log, :rows => '10' %>

    </div>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_field :comment %>
    </div>
    <div class="actions">
      <%= f.submit 'Add' %>
    </div>
<% end %>
